<div class="row app-header">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-sm-6 text-left">
                <h3>{{model.name}}</h3>
            </div>
            <div class="col-sm-6 text-right">
                <h3>
                    {{#link-to 'projects' class='go-back-button'}}
                        <i class="fa fa-close"></i>
                    {{/link-to}}
                </h3>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12">
            <div class="line-header"></div>
        </div>
    </div>
</div>
<div class="row app-header project-details">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-6 text-left">
                    <h4>
                        <i class="fa fa-minus-circle"></i>
                        <span>Project Details</span>
                    </h4>
                </div>
                <div class="col-xs-6 text-right">
                    <h6 class="opacity">{{projectPeriod}}</h6>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="col-xs-12">
                    <div class="project-details-inner">
                        <p>{{model.description}}</p>
                    </div>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="col-xs-12 text-right">
                    <button class="btn btn-primary" {{action 'openModal' 'projectForm' 'project'}}>Edit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12">
            <div class="line-footer"></div>
        </div>
    </div>
</div>
<div class="row app-header project-owner">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-12 text-left">
                    <h4>
                        <i class="fa fa-minus-circle"></i>
                        <span>Project Owner</span>
                    </h4>
                </div>
                <div class="col-xs-12">
                    <div class="project-owner-inner">
                        <div class="row avatar-wrapper">
                            <div class="col-xs-3">
                                <img width="35px" height="35px" src="images/avatar.svg">
                                <span class="avatar-name">{{model.owner.name}}</span>
                            </div>
                        </div>
                        <div class="row progress-wrapper">
                            <div class="col-xs-3">
                                <div class="step-bar large">
                                    <span class="current" style="right: -33px">{{progressRatio}}</span>

                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="60"
                                             aria-valuemin="0" aria-valuemax="100" style={{progressValue}}></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12">
            <div class="line-footer"></div>
        </div>
    </div>
</div>

<div class="navigation next {{unless isNext 'hidden'}}" {{action 'nextProject'}}>
    <img src="images/right-arrow.svg" height="30" width="30">
</div>
<div class="navigation prev  {{unless isPrev 'hidden'}}" {{action 'prevProject'}}>
    <img src="images/left-arrow.svg" height="30" width="30">
</div>
