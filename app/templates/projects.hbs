<div class="row app-header">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-md-4 col-xs-12 text-left">
                <h4>Projects Index</h4>
            </div>
            <div class="col-md-4 col-xs-6 text-center">
                {{filter-buttons filter=activeFilter action="applyFilter"}}
            </div>
            <div class="col-md-4 col-xs-6 text-right">
                <button class="btn btn-warning" {{action 'openModal' 'projectForm' 'projects'}}>New project</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12">
            <div class="line-header"></div>
        </div>
    </div>
</div>
<div class="row app-main">
    <div class="col-xs-12">
        <table class="table table-condensed">
            <thead>
            <tr>
                <th class="clickable" {{action 'sortBy' 'name'}}>
                    <span>Project Name</span>
                    <span class="fa fa-caret-down pull-right"></span>
                </th>
                <th class="clickable" {{action 'sortBy' 'owner.name'}}>
                    <span>Owner:</span>
                    <span class="fa fa-caret-down pull-right"></span>
                </th>
                <th class="clickable" {{action 'sortBy' 'endDate'}}>
                    <span>Due:</span>
                    <span class="fa fa-caret-down pull-right"></span>
                </th>
                <th class="clickable" {{action 'sortBy' 'percent'}}>
                    <span>Steps:</span>
                    <span class="fa fa-caret-down pull-right"></span>
                </th>
                <th class="clickable" width="5%">Active:</th>
            </tr>
            </thead>
            <tbody>
            {{#each filteredContent}}
                {{render 'project-item' this}}
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12">
            <div class="line-footer"></div>
        </div>
    </div>
</div>
